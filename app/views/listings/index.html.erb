<%# template start %>
<%# style="background:transparent !important", %>
<div class="center jumbotron">
<h1 class="text-center">Listings Home</h1>
<%# <%= image_tag 'icons/bike.jpg', width: '70%',class: 'rounded mx-auto d-block' %> 
</div>

<div class="container">
  <div class="row"> 
    <% @listings.each do |listing| %>
      <div class="col">
        <div class="card" style="width: 30rem;" class="well block margin-bottom-three">
          <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);">
              <%= image_tag 'vera4.jpg', width: '100%' %>
            </div>
          </div>
          <div class="card-body" >
            <h5 class="card-title text-center"><%=listing.name %></h5>
            <p class="card-text">
              <div class="col"> 
                <p class="text-center"><%=listing.description %>
                </p>
                <p class="text-center"><%=listing.category %>
                </p>
                <p class="text-center"><%=number_to_currency(listing.price) %>
                </p> 
              </div>
            </p> 
          </div>
          

          <%= link_to 'View Product', listing_path(listing), class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
    <div class="w-100"></div>
  </div>

<%# template end  %>
</div>