
<div class="row">

<div class="col-8 offset-4">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<%# ## this is added with application controller for username   %>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <%# resource.new this is probably not best place for this try to put it in the controllers%>
  <h4>Address</h4>
  <% resource.addresses.new %>
  <%= f.fields_for :addresses do |addresses_form| %>
<div class="field">
        <%= addresses_form.label :state %><br />
        <%= addresses_form.text_field :state %>
</div>
<div class="field">
        <%= addresses_form.label :postcode %><br />
        <%= addresses_form.text_field :postcode %>
</div>
<div class="field">
				<%= addresses_form.label :street %><br />
        <%= addresses_form.text_field :street %>
</div>
<div class="field">
				<%= addresses_form.label :number %><br />
        <%= addresses_form.text_field :number %>
</div>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary"  %>
  </div>
<% end %>


<%# uncomment this if you want the login button to show %>
<%# <%= render "devise/shared/links" %> 
</div>
</div>
