<div class="d-flex justify-content-center">
  <div class="card p-5 m-5 bg-light">
    <%= form_with model: listing, local: true do |form| %>
      <div class="row">
        <div class="col-sm-12">
          <%= form.label :name %><br/>
          <%= form.text_field :name, class: 'form-control form-control input-lg' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= form.label :category %><br/>
          <%= form.select :category, ['Clothing & Shoes ', 'Sport & Exercise', 'Art & Collectables', 'Vintage', 'Home', 'Toys', 'Other'], {}, { :class => 'form-control' } %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= form.label :description %><br/>
          <%= form.text_area :description, class: 'form-control form-control input-md' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <%= form.label :price %><br/>
          <%= form.number_field :price, min: 1.00, step: 0.05, class: 'form-control form-control input-lg' %>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12 ">
          <%= form.label :images %><br/>
          <%= form.file_field :images, accept: 'image/png, image/jpeg, image/jpg' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12"><br/>
          <%= form.submit 'Add Product', class: 'btn btn-outline-dark btn-block' %>
    <% end %>
    </div>
    </div>


  </div>
</div>

