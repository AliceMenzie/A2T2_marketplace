
<div class="center jumbotron">
<h1 class="text-center">Marketplace: full listing</h1>
</div>


<% # <%= image_tag '@listing.images.first', width: '50%', alt: 'user selling item image', class: 'rounded mx-auto d-block' %> 


<div class="container">
<div class="row"> 




<%# <div class="col">
        <div class="card mb-5 mt-3" style="width: 30rem;" class="well block margin-bottom-six"> %>



 <div class="d-flex justify-content-center">
<div class= "card mb-5 mt-3">
<p> <%= @listing.images.attached? ? (image_tag @listing.images.first, width: "100%",
                                                                     alt: "image here alt text", class: "rounded mx-auto d-block") : (image_tag "placeholder.jpg", width: "100%", class: "rounded mx-auto d-block") %> </p>


<div class="card-body" >
<p class="text-center">Product: <%= @listing.name %></p>
<p class="text-center">Desctription: <%= @listing.description %></p>
<p class="text-center">Category: <%= @listing.category %></p>
<p class="text-center">Price: <%= @listing.price %></p>
<p><p> Posted by: <%= @listing.user.username %></p></p>
<% if current_user == @listing.user %>
<%= link_to "Update", edit_listing_path(@listing), class: "btn btn-outline-dark btn-block" %>
<%= link_to "Destroy", listing_path(@listing), method: :delete, data: { confirm: "Are you sure you want to delete listing?" }, class: "btn btn-outline-dark btn-block" %>
<% end %>
<%= button_tag "Buy", data: { stripe: "payment", session_id: @session_id, public_key: Rails.application.credentials.dig(:stripe, :public_key) }, id: "stripe-button", class: "btn btn-outline-warning btn-block" %>
<%= javascript_include_tag "https://js.stripe.com/v3/" %>
<%= javascript_pack_tag "stripe" %>



</div>
</div>
</div>
</div>
</div>