
<div class="center jumbotron">
<h1 class="text-center">Sign up</h1>
</div>
<div class="d-flex justify-content-center">
 

<div class= "card p-5 m-5 bg-light">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<% # ## this is added with application controller for username %>
  <div class="field">
  <div class="row">
<div class = "col-sm-12"><br />
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-control input-lg" %>
  </div>
</div>
</div>
  <div class="field">
  <div class="row">
<div class = "col-sm-12"><br />
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control input-lg" %>
  </div>
</div>
</div>
  <div class="field">
  <div class="row">
<div class = "col-sm-12"><br />
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control input-lg" %>
  </div>
</div>
</div>
 <div class="row">
<div class = "col-sm-12"><br />
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control input-lg" %>
  </div>
  </div>
  <% # resource.new this is probably not best place for this try to put it in the controllers %>
   <div class="row">
<div class = "col-sm-12"><br />
  <h4>Address</h4>
  
  <%= f.fields_for :addresses, Address.new do |addresses_form| %>
  </div>
</div>
<div class="field">
<div class="row">
<div class = "col-sm-12"><br />
        <%= addresses_form.label :state %><br />
        <%= addresses_form.text_field :state, class: "form-control form-control input-lg" %>
</div>
</div>
</div>
<div class="field">
<div class="row">
<div class = "col-sm-12"><br />
        <%= addresses_form.label :postcode %><br />
        <%= addresses_form.text_field :postcode, class: "form-control form-control input-lg" %>
</div>
</div>
</div>
<div class="field">
<div class="row">
<div class = "col-sm-12"><br />
				<%= addresses_form.label :street %><br />
        <%= addresses_form.text_field :street, class: "form-control form-control input-lg" %>
</div>
</div>
</div>
<div class="field">
<div class="row">
<div class = "col-sm-12"><br />
				<%= addresses_form.label :number %><br />
        <%= addresses_form.text_field :number, class: "form-control form-control input-lg" %>

  <% end %>
</div>
</div>
</div>
  <div class="actions">
  <div class="row">
<div class = "col-sm-12"><br />
    <%= f.submit "Submit", class: "btn btn-outline-dark btn-block" %>
  </div>
  </div>
</div>
<% end %>


<% # uncomment this if you want the login button to show %>
<% # <%= render "devise/shared/links" %> 
</div>
</div>
