<div class="center jumbotron">
  <h1 class="text-center display-3">My Addresses</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to "Create New Address", new_address_path, class: "btn btn-outline-dark m-2" %>
    </div>
  </div>
</div>
<div class="container ">
  <div class="row">
    <% @addresses.each_with_index do |address, index| %>
      <div class="col">
        <div class="card m-3" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"></h5>
            <h6 class="card-subtitle mb-2 text-muted"> <%= "# #{index + 1}" %></h6>
            <p class="card-text">
              <%= address.number %> <%= address.street %>, <br/>
              <%= address.suburb %>, <br/>
              <%= address.postcode %> <%= address.state %>
            </p>
            <%= link_to "Edit", edit_address_path(address), class: "btn btn-outline-dark btn-block m-1" %>
            <%= link_to "Destroy", address_path(address), method: :delete, data: { confirm: "Are you sure you want to delete listing?" }, class: "btn btn-outline-dark btn-block  m-1" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>







