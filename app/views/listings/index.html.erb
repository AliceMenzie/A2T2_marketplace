<% # template start %>
<% # style="background:transparent !important", %>
<div class="center jumbotron">
<% if user_signed_in? %>
<% # <%=current_user.id %> 
<h1 class="text-center display-3">Welcome <%= current_user.username %></h1> <br/>  
<% @address = current_user.addresses %>
<h4 class="text-center display-3">This is your Local Marketplace! <% @address.each do |current_user_postcode| %>

<%= current_user_postcode.postcode %>

<% end %>
</h4>
<% else %>
<h1 class="text-center display-3">Sign up, to your Local Marketplace! </h1>
<% end %>

<% # <%= image_tag 'icons/bike.jpg', width: '70%',class: 'rounded mx-auto d-block' %> 
</div>

<div class="container">
  <div class="row"> 
    <% @listings.each do |listing| %>
      <div class="col">
        <div class="card mb-5 mt-3" style="width: 30rem;" class="well block margin-bottom-six">
          <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);">
              <% # <%= image_tag 'vera4.jpg', width: '100%' %> 
              <%= listing.images.attached? ? (image_tag listing.images.first, width: "100%", alt: "image here alt text") : (image_tag "placeholder.jpg", width: "100%") %> 
            </div>
          </div>
          <div class="card-body" >
            <h5 class="card-title text-center display-4"><%= listing.name %></h5>
            <p class="card-text">
              <div class="col"> 
                <p class="text-center"><%= listing.category %>
                </p>
                <p class="text-center"><%= listing.description %>
                </p>
                <h4><%= number_to_currency(listing.price) %>
                </h4>
                <h6> Posted by: <%= listing.user.username %></h6>
                
              </div>
            </p> 
          </div>
          <%= link_to "View Product", listing_path(listing), class: "btn btn-outline-dark" %>
        </div>
      </div>
    <% end %>
    
  </div>

<% # template end %>
</div>